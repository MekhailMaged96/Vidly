@model Vidly.Models.CustomerViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)  
        @Html.EditorFor(m => m.Customer.Name, new { htmlAttributes = new { @class = "form-control" } })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.EditorFor(m => m.Customer.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m=> m.Customer.BirthDate,null,new { @class = "text-danger" }) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select New MemberShip", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId, null, new { @class = "text-danger" })
        
    </div>
    <div class="checkbox">
        @Html.LabelFor(m => m.Customer.IsSubscribedToNewsLetter)
        @Html.EditorFor(m => m.Customer.IsSubscribedToNewsLetter)
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    <div>
        <button class="btn btn-primary" type="submit">Edit</button>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
