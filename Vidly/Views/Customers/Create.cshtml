@model Vidly.Models.CustomerViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Customers"))
{
    @Html.ValidationSummary(true,"Please fix the following errors",new {@class="text-danger bold" })

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name,new {@class="form-control" })
        @Html.ValidationMessageFor( m =>m.Customer.Name,null , new { @class="text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select New Membership", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribed To Newsletter ? 
        </label>
    </div>
  

    <div>
        <button class="btn btn-success" type="submit">Create</button>
    </div>
}
@section scripts{
    
    @Scripts.Render("~/bundles/jqueryval")
    
}